@{
    ViewData["Title"] = "Restore Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Restore Password</h1>

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="PreviousVerification" method="post">
                        <div class="mb-4">
                            <label for="login" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="login" name="User" required>
                        </div>
                        <div class="mb-4">
                            <label for="newPassword" class="form-label">Nueva contraseña</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label">Confirmar contraseña</label>
                            <input type="password" class="form-control mb-5" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button asp-controller="Users" asp-action="RestorePassword" name="action2" value="confirm2" class="btn btn-dark btn-md w-100">Confirm</button>
                            </div>
                            <div class="col">
                                <a href="/Users/Login" class="btn btn-outline-dark btn-md w-100">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
