@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-4xl">
        <h2 class="text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Registra un nuevo usuario</h2>
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-4xl mt-6">
        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="Register" method="post" class="space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label for="username" class="block text-lg font-medium leading-6 text-gray-900">Usuario:</label>
                        <div class="mt-2">
                            <input type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="username" name="username" required>
                        </div>
                    </div>
                    <div>
                        <label for="password" class="block text-lg font-medium leading-6 text-gray-900">Contraseña:</label>
                        <div class="mt-2">
                            <input type="password" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="password" name="password" required>
                        </div>
                    </div>
                    <div>
                        <label for="firstName" class="block text-lg font-medium leading-6 text-gray-900">Nombre:</label>
                        <div class="mt-2">
                            <input type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="firstName" name="firstName" required>
                        </div>
                    </div>
                    <div>
                        <label for="lastName" class="block text-lg font-medium leading-6 text-gray-900">Apellido:</label>
                        <div class="mt-2">
                            <input type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="lastName" name="lastName" required>
                        </div>
                    </div>
                    <div>
                        <label for="phone" class="block text-lg font-medium leading-6 text-gray-900">Teléfono:</label>
                        <div class="mt-2">
                            <input type="tel" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="phone" name="phone" required>
                        </div>
                    </div>
                    <div>
                        <label for="birthdate" class="block text-lg font-medium leading-6 text-gray-900">Fecha de Nacimiento:</label>
                        <div class="mt-2">
                            <input type="date" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="birthdate" name="birthdate" required>
                        </div>
                    </div>
                    <div class="sm:col-span-2">
                        <label for="email" class="block text-lg font-medium leading-6 text-gray-900">Correo Electrónico:</label>
                        <div class="mt-2">
                            <input type="email" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="email" name="email" required>
                        </div>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <button type="submit" class="flex w-full justify-center rounded-md bg-black px-4 py-2 text-lg font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Registrar</button>
                    <a href="/Users/Login" class="flex w-full justify-center rounded-md border border-black px-4 py-2 text-lg font-semibold leading-6 text-black shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
