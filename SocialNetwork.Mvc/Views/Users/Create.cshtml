@using SocialNetwork.Mvc.Utils
@using SocialNetwork.Core.Models
@model User

@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-lg">
        <h2 class="text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Registra un nuevo usuario</h2>
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-lg mt-6">
        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
            <form asp-action="Create" method="POST" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Login" class="block text-lg font-medium leading-6 text-gray-900">Usuario:</label>
                        <div class="mt-2">
                            <input asp-for="Login" type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="Password" class="block text-lg font-medium leading-6 text-gray-900">Contraseña:</label>
                        <div class="mt-2">
                            <input asp-for="Password" type="password" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="FirstName" class="block text-lg font-medium leading-6 text-gray-900">Nombre:</label>
                        <div class="mt-2">
                            <input asp-for="FirstName" type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-lg font-medium leading-6 text-gray-900">Apellido:</label>
                        <div class="mt-2">
                            <input asp-for="LastName" type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Phone" class="block text-lg font-medium leading-6 text-gray-900">Teléfono:</label>
                        <div class="mt-2">
                            <input asp-for="Phone" type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="Birthdate" class="block text-lg font-medium leading-6 text-gray-900">Fecha de Nacimiento:</label>
                        <div class="mt-2">
                            <input asp-for="Birthdate" type="date" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div>
                    <label asp-for="Email" class="block text-lg font-medium leading-6 text-gray-900">Correo Electrónico:</label>
                    <div class="mt-2">
                        <input asp-for="Email" type="email" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="TypeGenderId" class="block text-lg font-medium leading-6 text-gray-900">Género:</label>
                    <div class="mt-2">
                        <select asp-for="TypeGenderId" asp-items="Html.GetEnumSelectList<TypeGenderId>()" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6">
                        </select>
                        <span asp-validation-for="TypeGenderId" class="text-danger"></span>
                    </div>
                </div>
                <div class="flex justify-between">
                    <button type="submit" class="flex w-full justify-center rounded-md bg-black px-4 py-2 text-lg font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Registrar</button>
                    <a href="/" class="flex w-full justify-center rounded-md border border-black px-4 py-2 text-lg font-semibold leading-6 text-black shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

