@model SocialNetwork.Data.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Inicio de sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h1 class="card-title text-center mb-5">Inicio de sesión</h1>

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Login" method="POST">
                        <div class="mb-3">
                            <label asp-for="User" class="form-label">Usuario:</label>
                            <input asp-for="User" type="text" class="form-control" id="User" name="User" required>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Contraseña:</label>
                            <input asp-for="Password" type="password" class="form-control mb-2" id="password" name="password" required>
                            <a style="text-decoration:none; font-weight:bold; text-align:center; color:black; margin-left:1%" asp-area="" asp-controller="Users" asp-action="PreviousVerification">Restablecer contraseña</a>
                        </div>


                        <div class="row">
                            <div class="col mb-4">
                                <button type="submit" class="btn btn-dark btn-md w-100">Iniciar sesión</button>
                            </div>
                        </div>
                    </form>
                    <div class="col mb-3">
                        <a href="/Users/Create" style="text-decoration:none"> <button href="/Users/Create" type="submit" class="btn btn-outline-dark btn-md w-100">Registrarse</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
