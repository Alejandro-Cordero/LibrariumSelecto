@model SocialNetwork.Data.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Inicio de sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-lg">
        <!-- Ajuste para hacer el formulario más grande -->
        <h2 class="text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Inicio de sesión</h2> <!-- Ajuste para hacer el título más grande -->
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-lg mt-6">
        <!-- Ajuste para hacer el formulario más grande -->
        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="Login" method="POST" class="space-y-6">
                <div>
                    <label asp-for="User" class="block text-lg font-medium leading-6 text-gray-900">Usuario:</label> <!-- Ajuste para hacer el texto más grande -->
                    <div class="mt-2">
                        <input asp-for="User" type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="User" name="User" required> <!-- Ajuste para hacer el campo de entrada más grande -->
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label asp-for="Password" class="block text-lg font-medium leading-6 text-gray-900">Contraseña:</label> <!-- Ajuste para hacer el texto más grande -->
                        <div class="text-lg">
                            <a asp-area="" asp-controller="Users" asp-action="PreviousVerification" class="font-semibold text-black hover:text-gray-700">Restablecer contraseña</a>
                        </div>
                    </div>
                    <div class="mt-2">
                        <input asp-for="Password" type="password" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="password" name="password" required> <!-- Ajuste para hacer el campo de entrada más grande -->
                    </div>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-black px-4 py-2 text-lg font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Iniciar sesión</button> <!-- Ajuste para hacer el botón más grande -->
                </div>
            </form>
            <p class="mt-6 text-center text-lg text-gray-500">
                <!-- Ajuste para hacer el texto más grande -->
                ¿No tienes una cuenta?
                <a href="/Users/Create" class="font-semibold leading-6 text-black hover:text-gray-700">Regístrate</a>
            </p>
        </div>
    </div>
</div>

