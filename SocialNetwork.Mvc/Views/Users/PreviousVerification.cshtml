@{
    ViewData["Title"] = "Verificación Previa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-lg">
        <h2 class="text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Verificación de Usuario</h2>
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-lg mt-6">
        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="PreviousVerification" method="post" class="space-y-6">
                <div>
                    <label for="login" class="block text-lg font-medium leading-6 text-gray-900">Nombre de Usuario:</label>
                    <div class="mt-2">
                        <input type="text" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="login" name="User" required>
                    </div>
                </div>
                <div>
                    <label for="email" class="block text-lg font-medium leading-6 text-gray-900">Correo Electrónico:</label>
                    <div class="mt-2">
                        <input type="email" class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-lg sm:leading-6" id="email" name="email" required>
                    </div>
                </div>
                <div class="flex justify-between">
                    <button type="submit" name="action" value="confirm" class="flex w-full justify-center rounded-md bg-black px-4 py-2 text-lg font-semibold leading-6 text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black">Confirmar</button>
                    <a href="/Users/Login" class="flex w-full justify-center rounded-md border border-black px-4 py-2 text-lg font-semibold leading-6 text-black shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
